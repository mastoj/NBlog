@using NBlog.Helpers
@model NBlog.Views.PostItem

@{
    ViewBag.Title = "title";
}

<article class="post">
    <header>
        <h1>
            @Model.Title
        </h1>
        <time datetime="@Model.PublishedTime.ToHtmlTimeString()">@Model.PublishedTime.ToPostTime()</time>
    </header>
    <div class="content">
        @Html.Raw(@Model.HtmlContent)
    </div>
</article>
