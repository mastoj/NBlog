@model IEnumerable<NBlog.Views.PostItem>

@{
    ViewBag.Title = "Index";
}

<section class="posts">
    @foreach (var postItem in Model)
    {
        <article class="post">
            <header>
            <h1>
                @postItem.Title
            </h1>                
            </header>
            <div class="excerpt">
                @postItem.Excerpt
            </div>
            <div class="read-more">
                @Html.ActionLink("Read more", MVC.Home.ActionNames.Show, MVC.Home.Name, new { slug= postItem.Slug }, null)
            </div>
        </article>
    }
</section>
