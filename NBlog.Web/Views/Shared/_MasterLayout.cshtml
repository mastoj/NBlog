<!DOCTYPE html>
<html lang="en">
  <head>
	<meta charset="utf-8">
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">

	<!-- Le styles -->
	<link href="@Url.Content("~/Content/less/site.less")" rel="stylesheet" type="text/css"/>
	<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
	<![endif]-->
    @*
	<!-- Le fav and touch icons -->
	<link rel="shortcut icon" href="../assets/ico/favicon.ico">
	<link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
	<link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
*@  
      @RenderSection("AddedHeaderContent", false)
  </head>

    <body>
        <div id="header-container" class="container">
            <div class="header">
                <header>
                    <hgroup>
                        @{Html.RenderAction("Header", "Blog", new { area = "" });}
                    </hgroup>
                </header>
                @if(User != null && User.Identity.IsAuthenticated)
                {
                    Html.RenderAction("AdminMenu", "Blog");
                }
            </div>
        </div>
        <div id="main-container" class="container">
            <section class="main">
                @RenderBody()
            </section>
        </div>
        <!-- Le javascript
            ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery.textarearesizer.min.js"></script>
        <script src="~/Scripts/Markdown.Converter.js"></script>
        <script src="~/Scripts/Markdown.Sanitizer.js"></script>
        <script src="~/Scripts/Markdown.Editor.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.9.0.min.js"></script>
        <script src="~/Scripts/tag-it.js"></script>
        <script src="~/Scripts/nblog.js"></script>
        <script src="~/Content/google-code-prettify/prettify-full.js"></script>
    </body>
</html>
