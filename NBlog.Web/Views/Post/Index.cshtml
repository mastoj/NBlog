@using NBlog.Web.Helpers
@model IEnumerable<NBlog.Views.PostItem>

@{
    ViewBag.Title = "Index";
}

<section class="posts">
    @foreach (var postItem in Model)
    {
        <article class="post">
            <header>
                <h1>
                    @postItem.Title
                </h1>
                <time datetime="@postItem.PublishedTime.ToHtmlTimeString()">@postItem.PublishedTime.ToPostTime()</time>
            </header>
            <div class="excerpt">
                @postItem.Excerpt
            </div>
            <div class="block-link read-more">
                @Html.ActionLink("Read more", "Show", "Post", new { slug= postItem.Slug }, null)
            </div>
        </article>
    }
</section>
