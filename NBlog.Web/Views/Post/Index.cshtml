@using NBlog.Web.Helpers
@model NBlog.Web.Models.PostIndexViewModel

@{
    ViewBag.Title = Model.BlogTitle ?? "Give me a name please!";
}

<section class="posts">
    @foreach (var postItem in Model.Posts)
    {
        <article class="post bottom-ruler">
            <header class="post-header">
                <h1>
                    @Html.ActionLink(postItem.Title, "Show", "Post", new {slug = postItem.Slug}, null)
                </h1>
                <time class="time" datetime="@postItem.PublishedTime.ToHtmlTimeString()">@postItem.PublishedTime.ToPostTime()</time>
            </header>
            <div class="content excerpt">
                @Html.Raw(postItem.HtmlExcerpt)
            </div>
            <div class="block-link">
                @Html.ActionLink("Read more", "Show", "Post", new { slug= postItem.Slug }, null)
            </div>
        </article>
    }
</section>
