@model NBlog.Views.PostItem
@{
    Layout = null;
}
<div class="editor">
    <fieldset>
        <div class="editor-entry slug">
            <div class="editor-field">
                @Html.LabelFor(model => model.Slug, Url.Action("Index", "Post", null, "http"))
                @Html.EditorFor(model => model.Slug)
                @Html.ValidationMessageFor(model => model.Slug)
            </div>
        </div>
        <div class="editor-entry title">
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div id="wmd-panel" class="editor-entry content wmd-panel">
            <div class="editor-label">
                @Html.LabelFor(model => model.Content)
            </div>
            <div id="wmd-button-bar" class="wmd-button-bar"></div>
            @Html.TextAreaFor(model => model.Content, new { @class="wmd-input resizable"})
            @Html.ValidationMessageFor(model => model.Content)
        </div>
        <div class="editor-entry excerpt wmd-panel">
            <div class="editor-label">
                @Html.LabelFor(model => model.Excerpt)
            </div>
            <div id="excerptButtonBar" class="wmd-button-bar"></div>
            @Html.TextAreaFor(model => model.Excerpt, new { @class="wmd-input resizable"})
            @Html.ValidationMessageFor(model => model.Excerpt)
        </div>
        <div class="editor-entry">
            <ul id="tags">
                @if(Model != null && Model.Tags != null)
                {
                    foreach (var tag in Model.Tags)
                    {
                        <li class="tag">@tag</li>
                    }
                }
            </ul>
        </div>
        @Html.HiddenFor(model => model.AggregateId)
        <input type="submit" value="Save" class="submit-buttom" />
    </fieldset>
</div>
